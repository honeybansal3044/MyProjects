<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

		
		<bean id="loggingAspect" class="aop.interceptors.LoggingAdvice" />
		
		<bean id="customer" class="aop.interceptors.CustomerService"  />
		
		<bean id="customerAspect" class="org.springframework.aop.framework.ProxyFactoryBean">
			<property name="target" ref="customer"/>
			<property name="interceptorNames">
				<list>
					<value>loggingAspect</value>				
				</list>
			</property>
		</bean>

</beans>
