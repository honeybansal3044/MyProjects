<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="helloWorld" class="com.nov.test.Spring.HelloWorld" scope="singleton" init-method="init" destroy-method="destroy2">
       <property name="message" value="Hello World!"/>
   </bean>
   
   <bean id="helloWorld2" class="com.nov.test.Spring.HelloWorld2" scope="singleton">
       <property name="message" value="Hello World2!"/>
   </bean>
   
   <bean class="com.nov.test.Spring.InitHelloWorld" />

</beans>