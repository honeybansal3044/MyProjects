<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:util="http://www.springframework.org/schema/util" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    	<property name="staticMethod" value="com.jan.test.SpringFactory.CarFactory.setCarName"></property>
    	<property name="arguments">
    		<list>
    			<value>com.jan.test.SpringFactory.Audi</value>
    		</list>
    	</property>
    </bean>
    
    <bean id="cf" class="com.jan.test.SpringFactory.CarFactory" factory-method="getCar">
    
    </bean>
    
    <bean id="cf2" class="com.jan.test.SpringFactory.CarFactory">
		<property name="carName2" value="com.jan.test.SpringFactory.Audi"></property>    
    </bean>
    
    <bean id="car" factory-bean="cf2" factory-method="getCar2"></bean>
    
    <bean id="cf3" class="com.jan.test.SpringFactory.CarFactory2">
    	<property name="carName" value="com.jan.test.SpringFactory.Audi"></property>
    </bean>
	
</beans>