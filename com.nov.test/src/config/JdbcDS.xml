<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

   <bean id="bds" class="org.apache.tomcat.dbcp.dbcp2.BasicDataSource">
       <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
       <property name="url" value="jdbc:mysql://localhost:3306/test"/>
       <property name="username" value="root"/>
       <property name="password" value="root"/>
       <property name="maxTotal" value="15"/>
       <property name="maxIdle" value="5"/>
       <property name="maxWaitMillis" value="5000"/>
   </bean>
   
   <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
   		<property name="dataSource" ref="bds"></property>
   </bean>
   
   <bean id="dao" class="com.feb.testconnection.pools.StudentDaoImplJDBC">
   		<property name="ds" ref="bds"></property>
   		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
   </bean>
   
   <bean id="bo" class="com.feb.testconnection.pools.StudentBusinessOperationsImpl">
   		<property name="dao" ref="dao"></property>
   </bean>
   

</beans>